{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "_": true,
    "$filter": true,
    "$route": true,
    "angular": true,
    "BE": true,
    "inject": true,
    "module": true,
    "moment": true
  },
  "plugins": ["angular", "lodash"],
  "rules": {
    // Possible errors
    "no-console": 0, // Comment for production
    // Best practices
    "dot-notation": 1,
    "no-multi-spaces": 1,
    // Variables
    "no-unused-vars": 1,
    // Stylistic Issues
    "array-bracket-spacing": 1,
    //"camelcase": [1, {"properties": "always"}],
    "comma-spacing": 1,
    "consistent-this": [2, "that"],
    "no-mixed-spaces-and-tabs": 1,
    "no-trailing-spaces": 1,
    //"quotes": [1, "single"],
    "semi": [2, "always"],
    // Angular plugin
    "angular/log": 0, // Comment for production
    "angular/no-service-method": 0,
    // Lodash plugin
    "lodash/callback-binding": 2,
    "lodash/collection-return": 2,
    "lodash/matches-prop-shorthand": [1, "always"],
    "lodash/matches-shorthand": [1, "always"],
    "lodash/no-double-unwrap": 2,
    "lodash/no-extra-args": 2,
    "lodash/prefer-constant": 1,
    "lodash/prefer-filter": [1, 3],
    "lodash/prefer-get": [1, 2],
    "lodash/prefer-is-nil": 1,
    "lodash/prefer-lodash-typecheck": 1,
    "lodash/prefer-matches": [1, 2],
    "lodash/prefer-startswith": 1,
    "lodash/prefer-times": 1,
    "lodash/preferred-alias": 1,
    "lodash/prop-shorthand": [1, "always"],
    "lodash/unwrap": 2
  }
}
